<% content_for(:title, "お気に入り一覧") %>
<div class="container mx-auto pt-3">
  <div class="flex justify-center">
    <div class="w-full max-w-4xl">
      <!-- 検索フォーム -->
      <form>
        <div class="flex mb-5 mt-5 w-80">
          <input class="form-control flex-grow p-2 border border-gray-300 rounded-l" placeholder="検索ワード" type="search" />
          <button type="submit" name="commit" value="検索" class="btn btn-primary p-2 bg-red-300 text-white rounded-r" data-disable-with="検索">検索</button>
        </div>
      </form>
      <div class="flex flex-col space-y-6 overflow-hidden rounded-lg shadow-md dark:bg-gray-50 dark:text-gray-800 mx-auto my-4">
        <% if @bookmark_boards.present? %>
          <%= render @bookmark_boards %>
        <% else %>
          <p>まだお気に入りはありません🐰</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
