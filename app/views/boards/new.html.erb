<section class="p-6 dark:bg-gray-100 dark:text-gray-900 bg-gray-100">
  <div class="container mx-auto flex justify-center">
    <div class="w-full lg:w-2/5 bg-white p-6 rounded-lg shadow-md">
      <h1 class="text-center text-2xl font-semibold mb-6">新規作成</h1>
      <%= form_with model: @board, class: "new_board" do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :title, class: "mt-1 block w-full rounded-md border border-red-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
        <div class="mb-3">
          <%= f.label :body, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :body, class: "mt-1 block w-full rounded-md border border-red-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", rows: 15 %>
        </div>
        <div class="text-center">
          <%= f.submit "作成", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
